{
  "name": "ng2-md",
  "description": "Angular 2 Markdown Module.",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": {
    "name": "Yisrael Eliav",
    "email": "yisraelx@gmail.com",
    "url": "https://github.com/yisraelx/"
  },
  "main": "lib/index.js",
  "browser": "bundles/ng2-md.umd.js",
  "typings": "lib/index.d.ts",
  "files": [
    "bundles",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "ng2",
    "ng2-markdown",
    "ng2-showdown",
    "angular2",
    "angular2-md",
    "angular2-markdown",
    "angular2-showdown",
    "markdown",
    "md",
    "showdown"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "ngc --project src",
    "build:bundles": "webpack --progress --profile --bail",
    "build:demo": "webpack --config demo/webpack.config.js --progress --profile --bail",
    "build:gh-pages": "npm run build:demo -- --output-public-path /ng2-md/",
    "ci:before": "npm prune",
    "ci:script": "run-s ready",
    "ci:after": "run-s coverage:report semantic-release ci:deploy",
    "ci:deploy": "run-s build:gh-pages && git config --global user.email 'gh-pages@localhost' && git config --global user.name 'gh-pages' && gh-pages -d demo/build -r https://$GH_TOKEN@github.com/yisraelx/ng2-md.git -x",
    "coverage:check": "istanbul check-coverage --statements 80 --branches 80 --functions 80 --lines 80",
    "coverage:report": "codecov -f coverage/*.json",
    "clean": "rimraf lib bundles demo/build coverage",
    "commit": "git-cz",
    "demo": "webpack-dev-server --config demo/webpack.config.js --progress",
    "deploy": "run-s build:gh-pages && gh-pages -d demo/build",
    "lint": "run-s lint:*",
    "lint:demo": "tslint demo/src/**/*.ts",
    "lint:lib": "tslint src/**/*.ts",
    "lint:test": "tslint test/**/*.ts",
    "precommit": "run-s ready",
    "ready": "run-s clean lint test coverage:check",
    "start": "run-s demo",
    "test": "karma start",
    "watch:lib": "tsc --project src --watch",
    "watch:test": "npm test -- --auto-watch --no-single-run",
    "semantic-release": "semantic-release pre && run-s build:lib build:bundles && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/ng2-md.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/ng2-md/issues"
  },
  "homepage": "http://yisraelx.github.io/ng2-md",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "@angular/core": "^2.4.7",
    "@angular/http": "^2.4.7",
    "showdown": "^1.6.4"
  },
  "devDependencies": {
    "@angular/common": "^2.4.7",
    "@angular/compiler": "^2.4.7",
    "@angular/compiler-cli": "^2.4.7",
    "@angular/core": "^2.4.7",
    "@angular/forms": "^2.4.7",
    "@angular/http": "^2.4.7",
    "@angular/material": "^2.0.0-beta.1",
    "@angular/platform-browser": "^2.4.7",
    "@angular/platform-browser-dynamic": "^2.4.7",
    "@angular/router": "^3.4.7",
    "@types/core-js": "^0.9.35",
    "@types/jasmine": "^2.5.40",
    "@types/node": "^7.0.0",
    "@types/showdown": "^1.4.31",
    "@types/webpack": "^2.2.0",
    "angular2-template-loader": "^0.6.0",
    "clean-webpack-plugin": "^0.1.15",
    "codecov": "^1.0.1",
    "codelyzer": "^2.0.0",
    "commitizen": "^2.9.5",
    "core-js": "^2.4.1",
    "css-loader": "^0.26.1",
    "cz-conventional-changelog": "^1.2.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "gh-pages": "^0.12.0",
    "hammerjs": "^2.0.8",
    "html-loader": "^0.4.4",
    "html-webpack-plugin": "^2.26.0",
    "istanbul": "^0.4.5",
    "istanbul-instrumenter-loader": "^1.2.0",
    "jasmine-core": "^2.5.2",
    "karma": "^1.4.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.0",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-remap-coverage": "^0.1.4",
    "karma-source-map-support": "^1.2.0",
    "karma-webpack": "^2.0.1",
    "npm-run-all": "^4.0.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.14",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "rxjs": "^5.1.0",
    "semantic-release": "^6.3.2",
    "showdown": "^1.6.4",
    "style-loader": "^0.13.1",
    "ts-loader": "^1.3.3",
    "tslint": "^4.4.2",
    "typescript": "^2.1.6",
    "webpack": "^1.14.0",
    "webpack-dev-server": "^1.16.2",
    "zone.js": "^0.7.6"
  }
}
