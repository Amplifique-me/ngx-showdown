{
  "name": "ngx-showdown",
  "description": "Angular X Showdown Module.",
  "version": "0.0.0-semantically-released",
  "license": "MIT",
  "author": {
    "name": "Yisrael Eliav",
    "email": "yisraelx@gmail.com",
    "url": "https://github.com/yisraelx/"
  },
  "main": "lib/index.js",
  "browser": "bundles/ngx-showdown.umd.js",
  "typings": "lib/index.d.ts",
  "files": [
    "bundles",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "keywords": [
    "ng",
    "ng2",
    "ngx",
    "angular",
    "angular2",
    "angularx",
    "markdown",
    "md",
    "showdown"
  ],
  "scripts": {
    "build": "run-s build:*",
    "build:lib": "ng build lib",
    "build:demo": "ng build demo",
    "ci:script": "yarn verify",
    "ci:after": "run-s coverage semantic-release deploy",
    "coverage": "codecov -f coverage/coverage-final.json",
    "clean": "rimraf dist coverage",
    "cm": "git-cz",
    "commitmsg": "validate-commit-msg",
    "demo": "ng serve demo -o",
    "deploy": "gh-pages -d dist/demo -r https://$GH_TOKEN@github.com/yisraelx/ngx-showdown.git -m \"chore: update\" -x",
    "lint": "run-s lint:*",
    "lint:demo": "ng lint demo",
    "lint:lib": "ng lint lib",
    "precommit": "run-s verify",
    "predeploy": "yarn build:demo --prod --base-href /ngx-showdown/",
    "prepublish": "yarn build:lib",
    "verify": "run-s clean lint \"test --browsers=ChromeHeadless\"",
    "semantic-release": "semantic-release",
    "start": "yarn demo",
    "test": "ng test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yisraelx/ngx-showdown.git"
  },
  "bugs": {
    "url": "https://github.com/yisraelx/ngx-showdown/issues"
  },
  "homepage": "http://yisraelx.github.io/ngx-showdown",
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "helpMessage": "Commit message violates the rules defined for this project. Please, execute `npm run cm` to generate a correct commit message with `commitizen`"
    }
  },
  "release": {
    "pkgRoot": "dist/src"
  },
  "peerDependencies": {
    "@angular/common": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@types/showdown": "^1.9.3",
    "showdown": "^1.9.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.9",
    "@angular-devkit/build-ng-packagr": "^0.13.9",
    "@angular/animations": "^7.2.15",
    "@angular/cdk": "^7.3.7",
    "@angular/cli": "^7.3.9",
    "@angular/common": "^7.2.15",
    "@angular/compiler": "^7.2.15",
    "@angular/compiler-cli": "^7.2.15",
    "@angular/core": "^7.2.15",
    "@angular/forms": "^7.2.15",
    "@angular/language-service": "^7.2.15",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "^7.2.15",
    "@angular/platform-browser-dynamic": "^7.2.15",
    "@angular/router": "^7.2.15",
    "@types/jasmine": "^3.3.12",
    "@types/jasminewd2": "^2.0.6",
    "@types/node": "^8.9.4",
    "@types/showdown": "^1.9.3",
    "codecov": "^3.0.1",
    "codelyzer": "^5.0.1",
    "commitizen": "^2.9.6",
    "core-js": "^2.6.5",
    "gh-pages": "^1.1.0",
    "hammerjs": "^2.0.8",
    "husky": "^0.14.3",
    "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "^2.0.5",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "ng-packagr": "^4.7.1",
    "npm-run-all": "^4.1.3",
    "protractor": "^5.4.2",
    "rimraf": "^2.6.2",
    "rxjs": "^6.5.1",
    "semantic-release": "^15.3.1",
    "showdown": "^1.9.0",
    "ts-node": "^8.1.0",
    "tsickle": ">=0.34.0",
    "tslib": "^1.9.3",
    "tslint": "^5.16.0",
    "typescript": "~3.2.4",
    "validate-commit-msg": "^2.14.0",
    "yarn": "^1.6.0",
    "zone.js": "~0.8.26"
  }
}
